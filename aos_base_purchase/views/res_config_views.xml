<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_purchase_landed_cost_configuration" model="ir.ui.view">
	        <field name="name">res.config.settings.view.form.inherit.purchase</field>
	        <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
            	<div class="app_settings_block" data-key="purchase" position="inside">
                    <h2>Landed Cost Average</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="This default value is applied to any purchase landed cost for product average method. This can be changed in the category method form.">
                            <div class="o_setting_left_pane">
                                <field name="group_landed_cost_by_weight"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_landed_cost_by_weight"/>
                            </div>
                            <div class="o_setting_left_pane">
			                    <field name="group_landed_cost_by_volume"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_landed_cost_by_volume"/>
                            </div>
                            <div class="o_setting_left_pane">
			                    <field name="group_landed_cost_by_quantity"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_landed_cost_by_quantity"/>
                            </div>
                            <div class="o_setting_left_pane">
			                    <field name="group_landed_cost_by_amount"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_landed_cost_by_amount"/>
                            </div>
                        </div>
                    </div>
	            </div>
            </field>
        </record>

</odoo>
